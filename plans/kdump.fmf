summary: Kdump tests
discover:
  - name: client-setup
    how: fmf
    test:
     - /setup/kdump
    where:
      - client
  - name: server-setup
    how: fmf
    test:
     - /setup/nfs_server
    where:
      - server
  - name: client-test
    how: fmf
    test:
     - /tests/client
    where:
      - client

provision:
   - name: server
     how: virtual
     image: fedora:40

   - name: client
     how: virtual
     image: fedora:40

execute:
    how: tmt
